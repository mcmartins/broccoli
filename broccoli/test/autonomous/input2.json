{
  "jobName": "Job1",
  "jobDescription": "Test for searching files in directory and start processes",
  "workingDir": "/tmp",
  "timeout": 0,
  "verbose": false,
  "tasks": [
    {
      "taskName": "FileSearch",
      "taskDescription": "Searches files in /tmp folder and executes prover and mace",
      "wait": false,
      "prepare": {
        "forEach": {
          "select": "file",
          "in": "/tmp",
          "matching": "*.in"
        },
        "do": {
          "write": "",
          "replace": ""
        },
        "commands": [
          "prover9 -f $file > $file.out",
          "mace4 -f $file > $file.out"
        ]
      },
      "guidance": []
    }
  ]
}